<% layout("/layouts/boilerplate.ejs") %>
    <div class="row mt-3">
        <div class="col-8 offset-2">

    <h3>Create New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Enter Title</label>
        <input name="listing[title]" placeholder="Enter Title" type="text"
         class="form-control " required>
         <div class="valid-feedback">Title looks good</div>
         <div class="invalid-feedback">Title should be specified</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Enter Description</label>
             <textarea name="listing[description]" type="text" placeholder="Enter Description"
        rows="6" cols="20" class="form-control " required></textarea>
        <div class="invalid-feedback">Description should be specified</div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Enter Image URL/Link</label>
            <input name="listing[image]" type="text" placeholder="Enter Image URL/Link" 
            class="form-control ">
        </div>


        <div class="row">
             <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Enter Price</label>
            <input name="listing[price]" placeholder="Enter Price" 
            class="form-control" required>
            <div class="invalid-feedback">Price should be specified</div>
        </div>

        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Enter Country</label>
            <input name="listing[country]" type="text" placeholder="India" 
            class="form-control" required>
            <div class="invalid-feedback">Country should be specified</div>
        </div>
        </div>


        <div class="mb-3">
            <label for="location" class="form-label">Enter Location</label>
            <input name="listing[location]" type="text" placeholder="Visakhapatnam"
             class="form-control" required>
             <div class="invalid-feedback">Location should be specified</div>
        </div>

        <button type="submit" class="btn btn-dark add-btn mt-3">Add Listing</button>
    </form>
     </div>
    </div>

    <br><br>
